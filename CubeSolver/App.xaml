<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CubeSolver"
             x:Class="CubeSolver.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--Set the global font size and attributes for various controls-->
            <x:Double x:Key="GlobalFontSize">18</x:Double>
            
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style TargetType="Picker">
                <Setter Property="FontSize" Value="{DynamicResource GlobalFontSize}" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
